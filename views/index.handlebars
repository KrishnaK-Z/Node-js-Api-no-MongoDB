<h1 class="text-center mb-4">{{title}}</h1>
<div class="container">
    <form action="/api/members" method="POST">
        <div class="form-group">
            <label for="inputName">Name</label>
            <div class="col-sm-1-12">
                <input type="text" class="form-control" name="name" id="name" placeholder="Company Name Here...">
            </div>
        </div>
        <div class="form-group">
          <label for="">Category</label>
          <input type="text"
            class="form-control" name="category" id="cateogry" aria-describedby="helpId" placeholder="Category">
        </div>
        <div class="form-group">
          <label for="">Start</label>
          <input type="number"
            class="form-control" name="start" id="start" aria-describedby="helpId" placeholder="Start Year">
        </div>
        <div class="form-group">
          <label for="">End Year</label>
          <input type="number"
            class="form-control" name="end" id="end" aria-describedby="helpId" placeholder="End Year">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<h4>Companies</h4>
<ul class="list-group">
    {{#each companies}}
    <li class="list-group-item">{{this.name}}: {{this.start}} - {{this.end}}</li>
    {{/each}}
</ul>